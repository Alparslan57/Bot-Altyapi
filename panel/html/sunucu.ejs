	<% } else { %>
        <br>
		<canvas class="d-inline-block align-top rounded-circle" style="background-color: #7289da" id="<%= sunucu.name.split(' ').join('').replace(`'`, ``) %>" width="226px" height="226px"></canvas>
		<br>
        <script>
			function draw() {
				const ctx = document.getElementById("<%= sunucu.name.split(' ').join('').replace(`'`, ``) %>").getContext('2d');
				ctx.font = '95px Arial';
				ctx.textAlign = "center";
				ctx.fillStyle = "white";
				ctx.fillText("<%= sunucu.name.split(' ').map(v => v[0]).join('') %>", 115, 152);
			};
			draw();
		</script>
	<% } %>
